<% provide(:title, "log in") %>
<div class="login-wrapper container">
	<%= form_for :session, url: login_path do |f| %>
		<p>
			<%= f.label :email %>
			<%= f.text_field :email, autofocus: true, style: 'margin-top:0; height: 1.3em;' %>
		</p>	

		<p>
			<%= f.label :password %>
			<%= f.password_field :password, style: 'margin-top:0; height: 1.3em;' %>
		</p>

		<p>
			<%= f.label :remember_me do %>
				<%= f.check_box :remember_me %>
				<span>remember me</span>
			<% end %>
		</p>	

		<p class="submit-container">
			<button class="normal" type="submit">log in</button>
		</p>

		<p>
			<%= link_to "forgot your password?", new_password_reset_path, class: 'passwd' %>
		</p>

	<% end %>

	<div>
		<p class="title">First time here?</p>
			<a href="/signup">
				<p>
					<button class="normal" type="submit">sign up</button>
				</p>
			</a>
		</p>
	</div>	
</div>