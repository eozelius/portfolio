<% provide(:title, "change password") %>

<div class="container">
	<%= form_for( @user, url: password_reset_path(params[:id])) do |f| %>
		<%= hidden_field_tag :email, @user.email %>

		<p>
			<%= f.label :password %>
			<%= f.password_field :password, style: 'margin-top:0; height: 1.3em;' %>
		</p>

		<p>
			<%= f.label :password_confirmation %>
			<%= f.password_field :password_confirmation, style: 'margin-top:0; height: 1.3em;' %>
		</p>

		<p>
			<button class="normal" type="submit">submit</button>
		</p>
		
	<% end %>
</div>